{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "alwaysStrict": true,
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public/vendor"
  ]
}
